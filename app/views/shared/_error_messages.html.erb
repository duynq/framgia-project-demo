<% if defined?(object) && object.errors.any? %>
	<% object.errors.full_messages.each do |message| %>
		$.notify("<%= raw(message) %>", "error", { position: "right bottom"});	
	<% end %>
<% end %>

<% flash.each do |message_type, message| %>
	$.notify("<%= raw(message) %>", "<%= message_type %>");
<% end %>