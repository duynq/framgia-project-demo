  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container-fluid">
    <%= yield %>
    <a href="#top" id="top" style="position: fixed;right: 20px; bottom: 10px; display: none">
      <img src="https://ngaotruyen.com/images/go-to-top.png">
    </a>
    
  </div>
</body>
</html>
